{
    "manifest_version": 2,
    "name": "Youtube Live Helper",
    "description": "Youtube Live をちょっと便利にします",
    "version": "1.0",
    "content_scripts": [
      {
        "matches": [
          "https://studio.youtube.com/video/*/livestreaming"
        ],
        "js": ["script.js"]
      },
      {
        "run_at": "document_end",
        "matches": [
          "https://ytlh-server.herokuapp.com/redirect*"
        ],
        "js": ["oauth_handler.js"]
      }
    ],
    "permissions": [
        "storage"
    ],

    "browser_action": {
        "default_title": "",
        "default_popup": "popup.html"
    }
}
