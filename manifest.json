{
    "manifest_version": 2,
    "name": "Tube Live Helper",
    "description": "Youtube Live をちょっと便利にします",
    "version": "1.0",
    "icons": {
      "16": "16.png",
      "48": "48.png"
    },
    "content_scripts": [
      {
        "run_at": "document_end",
        "matches": [
          "https://ytlh-server.herokuapp.com/redirect*"
        ],
        "js": ["oauth_handler.js"]
      }
    ],
    "background": {
      "scripts": ["event_page.js"]
    },
    "permissions": [
        "storage",
        "tabs"
    ],

    "browser_action": {
        "default_title": "",
        "default_popup": "popup.html"
    }
}
